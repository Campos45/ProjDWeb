@model appMonumentos.Models.Localidade
@using System.Security.Claims

@{
    ViewData["Title"] = "Detalhes da Localidade";
}

<h1>Detalhes</h1>

<div>
    <h4>Localidade</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeLocalidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeLocalidade)
        </dd>

        <dt class="col-sm-2">
            Criado por
        </dt>
        <dd class="col-sm-10">
            @Model.Utilizador?.Username
        </dd>
    </dl>
</div>

<div>
    <!-- Edit só aparece ao dono OU admin -->
    @if (User.Identity.IsAuthenticated &&
         (User.IsInRole("Admin") || User.Identity.Name == Model.Utilizador?.Username))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <text> | </text>
    }

    <!-- Delete só aparece ao dono OU admin -->
    @if (User.Identity.IsAuthenticated &&
         (User.IsInRole("Admin") || User.Identity.Name == Model.Utilizador?.Username))
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <text> | </text>
    }

    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
</div>
