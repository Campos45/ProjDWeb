@model IEnumerable<appMonumentos.Models.Localidade>
@using System.Security.Claims

@{
    ViewData["Title"] = "Localidades";
}

<h1>Localidades</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar nova localidade</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.NomeLocalidade)</th>
        <th>Criado por</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NomeLocalidade</td>
            <td>@item.Utilizador?.Username</td>
            <td>
                <!-- Edit só aparece ao dono OU admin -->
                @if (User.Identity.IsAuthenticated &&
                     (User.IsInRole("Admin") || User.Identity.Name == item.Utilizador?.Username))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <text> | </text>
                }

                <!-- Delete só aparece ao dono OU admin -->
                @if (User.Identity.IsAuthenticated &&
                     (User.IsInRole("Admin") || User.Identity.Name == item.Utilizador?.Username))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    <text> | </text>
                }

                <!-- Details aparece sempre -->
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>