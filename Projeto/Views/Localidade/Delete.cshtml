@model appMonumentos.Models.Localidade

@{
    // Define o título da página
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<!-- Pergunta de confirmação para eliminar a localidade -->
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Localidade</h4>
    <hr />
    <dl class="row">
        <!-- Mostra o nome da localidade a eliminar -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeLocalidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeLocalidade)
        </dd>
    </dl>

    <!-- Formulário que submete a confirmação de eliminação -->
    <form asp-action="Delete">
        <!-- Campo escondido para passar o Id da localidade -->
        <input type="hidden" asp-for="Id" />
        <!-- Botão para confirmar a eliminação -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <!-- Link para voltar à lista de localidades -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>