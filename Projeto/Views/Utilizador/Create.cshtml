@model appMonumentos.Models.Utilizador

@{
    // Define o título da página
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Utilizador</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <!-- Formulário que envia os dados para a ação Create do controlador -->
        <form asp-action="Create">
            <!-- Mostra erros de validação relacionados com o modelo -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo para introduzir o username -->
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <!-- Mensagem de erro associada ao Username -->
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Campo para introduzir a password -->
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Campo para introduzir o nome completo -->
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <!-- Campo para introduzir o email -->
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Botão para submeter o formulário e criar o utilizador -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Link para voltar à lista de utilizadores -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <!-- Scripts para validação cliente -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
